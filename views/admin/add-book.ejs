<body>
    <header>
        <%- include('../includes/navbar') %>
    </header>

    <main>
        <form action="<%= !edit?'/admin/addbook':'/admin/editbook' %>" method="POST">
            <div style="display: flex;flex-direction:column;">
                <label for="title">Enter Book's title</label>
            <input type="text" name="title" value="<%=edit ? book.title:'' %>" required>
                <label for="title">Enter Book's price</label>
            <input type="number" name="price" value="<%=edit ? book.price:'' %>" required>
                <label for="title">Enter Book's Description(optional)</label>
            <input type="text" name="description" value="<%=edit ? book.description:'' %>">
            <input type="hidden" name="id" value="<%= edit?book.id:'' %>" >
            <button type="submit"><%= !edit?"Add Book":"Update Book" %></button>
            </div>
        </form>
<%- include('../includes/end') %>